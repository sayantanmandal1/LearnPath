# Application Settings
PROJECT_NAME="AI Career Recommender"
VERSION="0.1.0"
DEBUG=true
SECRET_KEY="your-secret-key-here-change-in-production"
API_V1_STR="/api/v1"
ALLOWED_HOSTS=["http://localhost:3000", "http://127.0.0.1:3000","*"]

# CORS Settings
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173", "http://127.0.0.1:3000", "http://127.0.0.1:5173"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS", "PATCH"]
CORS_ALLOW_HEADERS=["Accept", "Accept-Language", "Content-Language", "Content-Type", "Authorization", "X-Requested-With"]

# Database Settings
DATABASE_URL="postgresql+asyncpg://postgres:password@localhost:5432/ai_career_db"
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Redis Settings
REDIS_URL="redis://localhost:6379/0"
REDIS_CACHE_TTL=300

# JWT Settings
JWT_SECRET_KEY="your-jwt-secret-key-here"
JWT_ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# External API Settings
GITHUB_TOKEN=""
LINKEDIN_CLIENT_ID=""
LINKEDIN_CLIENT_SECRET=""

# Logging Settings
LOG_LEVEL="INFO"
LOG_FORMAT="json"

# Monitoring Settings
ENABLE_METRICS=true

# Vector Database Settings
VECTOR_DB_PROVIDER="pinecone"  # or "weaviate"

# Pinecone Settings
PINECONE_API_KEY=""
PINECONE_ENVIRONMENT="us-west1-gcp-free"
PINECONE_INDEX_NAME="ai-career-recommender"

# Weaviate Settings
WEAVIATE_URL="http://localhost:8080"
WEAVIATE_API_KEY=""

# Embedding Settings
EMBEDDING_DIMENSION=384
EMBEDDING_MODEL="sentence-transformers/all-MiniLM-L6-v2"
VECTOR_DB_BATCH_SIZE=100
VECTOR_DB_MAX_RETRIES=3
VECTOR_DB_TIMEOUT=30
VECTOR_DB_SIMILARITY_METRIC="cosine"