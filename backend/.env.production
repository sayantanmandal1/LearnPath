# Production Environment Configuration
# AI Career Recommender - Production Settings

# Application Settings
PROJECT_NAME="AI Career Recommender"
VERSION="1.0.0"
DEBUG=false
SECRET_KEY="CHANGE_THIS_IN_PRODUCTION_VERY_SECURE_SECRET_KEY"
API_V1_STR="/api/v1"
ALLOWED_HOSTS=["https://your-domain.com", "https://api.your-domain.com"]

# CORS Settings - Update with your production domains
CORS_ORIGINS=["https://your-domain.com", "https://app.your-domain.com"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS", "PATCH"]
CORS_ALLOW_HEADERS=["Accept", "Accept-Language", "Content-Language", "Content-Type", "Authorization", "X-Requested-With"]

# Database Settings - Production PostgreSQL
DATABASE_URL="postgresql+asyncpg://username:password@db-host:5432/ai_career_db"
DATABASE_POOL_SIZE=50
DATABASE_MAX_OVERFLOW=100

# Redis Settings - Production Redis
REDIS_URL="redis://redis-host:6379/0"
REDIS_CACHE_TTL=3600

# JWT Settings - Use strong secrets in production
JWT_SECRET_KEY="CHANGE_THIS_VERY_SECURE_JWT_SECRET_KEY_IN_PRODUCTION"
JWT_ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=30

# Supabase Settings - Production
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_ANON_KEY="your_supabase_anon_key"
SUPABASE_SERVICE_ROLE_KEY="your_supabase_service_role_key"

# External API Settings - Production keys
GITHUB_TOKEN="your_github_token"
LINKEDIN_CLIENT_ID="your_linkedin_client_id"
LINKEDIN_CLIENT_SECRET="your_linkedin_client_secret"
GEMINI_API_KEY="your_gemini_api_key"

# Logging Settings - Production
LOG_LEVEL="INFO"
LOG_FORMAT="json"
LOG_FILE="/var/log/ai-career-recommender/app.log"

# Monitoring Settings - Production
ENABLE_METRICS=true
PROMETHEUS_PORT=9090
GRAFANA_URL="https://monitoring.your-domain.com"

# Email Settings - Production SMTP
SMTP_HOST="smtp.your-email-provider.com"
SMTP_PORT=587
SMTP_USERNAME="noreply@your-domain.com"
SMTP_PASSWORD="your_smtp_password"
SMTP_USE_TLS=true

# Security Settings - Production
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100
ENCRYPTION_KEY="CHANGE_THIS_ENCRYPTION_KEY_IN_PRODUCTION"
AUDIT_LOGGING_ENABLED=true

# Performance Settings - Production
MAX_WORKERS=4
WORKER_TIMEOUT=300
KEEP_ALIVE=2
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=50

# Vector Database Settings - Production
VECTOR_DB_PROVIDER="pinecone"
PINECONE_API_KEY="your_pinecone_api_key"
PINECONE_ENVIRONMENT="us-west1-gcp"
PINECONE_INDEX_NAME="ai-career-recommender-prod"

# Backup Settings - Production
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET="your-backup-bucket"
AWS_ACCESS_KEY_ID="your_aws_access_key"
AWS_SECRET_ACCESS_KEY="your_aws_secret_key"

# Alerting Settings - Production
ALERT_EMAIL="alerts@your-domain.com"
SLACK_WEBHOOK_URL="https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK"
PAGERDUTY_INTEGRATION_KEY="your_pagerduty_key"

# CDN Settings - Production
CDN_URL="https://cdn.your-domain.com"
STATIC_FILES_URL="https://static.your-domain.com"

# SSL/TLS Settings - Production
SSL_CERT_PATH="/etc/ssl/certs/your-domain.crt"
SSL_KEY_PATH="/etc/ssl/private/your-domain.key"
